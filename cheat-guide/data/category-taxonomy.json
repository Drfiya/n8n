    },
    "transform": {
      "id": "transform",
      "displayName": "Data Transformation",
      "description": "Nodes that modify, transform, or manipulate data",
      "icon": "üîÑ",
      "sourceGroups": ["transform"],
      "examples": ["Set", "Code", "Filter", "Merge"]
    },
    "input": {
      "id": "input",
      "displayName": "Data Sources",
      "description": "Nodes that read or retrieve data from external services",
      "icon": "üì•",
      "sourceGroups": ["input"],
      "examples": ["HTTP Request", "Google Sheets", "Database nodes"]
